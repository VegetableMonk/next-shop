{
	"$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",

	"files":{
		"ignore":["./node_modules","./.next"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious":{
				"noExplicitAny": "off"
			},
			"style":{
				"noNegationElse":"warn",
				"useNamingConvention":"warn"
			},
			"complexity":{
				"useSimplifiedLogicExpression":"warn",
				"noExcessiveCognitiveComplexity":"warn"
			},
			"correctness":{
				"enabled":true
			}
			
		}
	},
	"formatter":{
		"enabled":true
	},
	"javascript":{
		"formatter":{
			"semicolons": "asNeeded"
		}
	}
}
